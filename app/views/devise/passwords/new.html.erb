<div class="text-center">
  <div class="reset_password_main">
    <div class="form-signin">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h1 class="h3 mb-3 font-weight-normal">パスワードを変更</h1>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class: "form-control" %>
        <%= f.submit "再設定リンクを送信", class: "btn btn-md btn-primary btn-block" %>
      <% end %>
      <%= button_to  "ログインへ", new_session_path(resource_name), class: "btn btn-md btn-primary btn-block mt-2" %>
    </div>
  </div>
</div>
